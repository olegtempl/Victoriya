include ../module/mixins


section.section
    h2.text-md.text-center Aligners
    div
        h3.text-sm.text-gray.text-center Space between
        .container.background-gray
            .section
                .aligner-space-between
                    div
                        img(src='images/1.jpg', alt='Image 4', width='150')
                    div
                        img(src='images/2.jpg', alt='Image 5', width='150')
    h3.text-sm.text-gray.text-center Space around
    .container.background-gray
        .section
            .aligner-space-around
                div
                    img(src='images/1.jpg', alt='Image 6', width='150')
                div
                    img(src='images/2.jpg', alt='Image 5', width='150')
                div
                    img(src='images/1.jpg', alt='Image 1', width='150')
                div
                    img(src='images/2.jpg', alt='Image 2', width='150')
    .section.row
        .col-xs-12.col-md-6
            h3.text-sm.text-gray.text-center Align start
            .container.background-gray
                .section
                    .content-start
                        div
                            img(src='images/1.jpg', alt='Image 1', width='150')
        .col-xs-12.col-md-6
            h3.text-sm.text-gray.text-center Align end
            .container.background-gray
                .section
                    .content-end
                        div
                            img(src='images/3.jpg', alt='Image 3', width='150')
    .row
        .col-xs-12.col-md-4
            h3.text-sm.text-gray.text-center Center vertical
            .container.background-gray
                .section
                    .aligner-center-vertical(style='height:150px;')
                        p.text-dark.no-margin.text-md Lorem ipsum dolor sit amet
        .col-xs-12.col-md-4
            h3.text-sm.text-gray.text-center Center vertical and horitzontal
            .container.background-gray
                .section
                    .aligner-center-horitzontal.aligner-center-vertical(style='height:150px;')
                        p.text-dark.no-margin.text-md Lorem ipsum dolor sit amet
        .col-xs-12.col-md-4
            h3.text-sm.text-gray.text-center Align to bottom
            .container.background-gray
                .section
                    .aligner(style='height:150px;')
                        p.text-dark.no-margin.aligner-item-bottom.text-md Lorem ipsum dolor sit amet
section.section
    h2.text-md.text-center Low opacity
    .container.background-gray.opacity-low
        .section
            .aligner-center-horitzontal.aligner-center-vertical(style='height:150px;')
                img(src='images/1.jpg', alt='Image 1', width='150')

.section
    .aligner-center-horitzontal.aligner-center-vertical(style='height:40px;')
      +goToNavigation
